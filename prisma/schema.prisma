generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  image       String
  price       Float
  description String
  rating      Int
  stock       Int
  category    String
  subImages   Image[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Image {
  id        String  @id @default(cuid())
  image     String
  product   Product @relation(fields: [productId], references: [id])
  productId String
}
