generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  image       String
  price       Float
  description String
  rating      Int
  stock       Int
  category    String
  subImages   Image[]
  users       Basket[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Image {
  id        String  @id @default(cuid())
  image     String
  product   Product @relation(fields: [productId], references: [id])
  productId String
}

model User {
  id       String   @id
  email    String
  products Basket[]
}

model Basket {
  product   Product @relation(fields: [productId], references: [id])
  productId String
  user      User    @relation(fields: [userId], references: [id])
  userId    String
  quantity  Int

  @@id([productId, userId])
}
